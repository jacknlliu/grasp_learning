<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" 
       name="robot">
       
  <!-- MODELS -->
  <xacro:include filename="$(find vito_description)/model/materials.urdf"/>
  <xacro:include filename="$(find soft_hand_description)/model/soft_hand.urdf.xacro"/>
  

  <link name="world" />  
   <link name="floating_base_link" />  

   
   <joint name="floating_base_joint" type="floating">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="floating_base_link"/>

    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
 </joint>

  <xacro:soft_hand parent="floating_base_link" name="right_hand" left="false" withAdaptiveTransmission="true" useMimicTag="false"> 
    <origin xyz="0 0 0" rpy="0 0 0"/> 
  </xacro:soft_hand>



</robot>
